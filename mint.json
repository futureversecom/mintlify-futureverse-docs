{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Futureverse",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg",
    "href": "https://www.futureverse.com/"
  },
  "favicon": "/favicon.png",
  "colors": {
    "primary": "#0E0E0E",
    "light": "#aeb7ba",
    "dark": "#0E0E0E",
    "background": {
      "dark": "#050505"
    },
    "anchors": {
      "from": "#aeb7ba",
      "to": "#050505"
    }
  },
  "sidebar": {
    "items": "border"
  },
  "search": {
    "location": "top"
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": true
  },
  "font": {
    "headings": {
      "family": "Objektivmk",
      "url": "https://cdn.prod.website-files.com/64b459a54c6aeb0b60898fe2/64b459a54c6aeb0b60898fe7_ObjektivMk1-Bold.woff",
      "format": "woff",
      "weight": 700
    }
  },
  "integrations": {
    "intercom": "x0kxkkip"
  },
  "topbarCtaButton": {
    "name": "FuturePass Login",
    "url": "https://futurepass.futureverse.app/",
    "style": "roundedRectangle"
  },
  "tabs": [
    {
      "name": "Developer Docs",
      "url": "dev"
    },
    {
      "name": "Platform Tools",
      "url": "platform-tools"
    },
    {
      "name": "API Reference",
      "url": "api"
    }
  ],
  "modeToggle": {
    "default": "dark"
  },
  "anchors": [
    {
      "name": "Community",
      "icon": "discord",
      "url": "https://discord.com/invite/futureverse"
    }
  ],
  "navigation": [
    {
      "group": "Developer Docs 101",
      "pages": [
        "dev/overview",
        "dev/guide",
        "dev/best_practices",
        "dev/glossary"
      ]
    },
    {
      "group": "Authentication",
      "pages": [
        "dev/authentication",
        {
          "group": "Getting Started",
          "pages": [
            "dev/authentication/register-client",
            "dev/authentication/getting-started/installation"
          ]
        },
        {
          "group": "Configuration",
          "pages": [
            "dev/authentication/configuration",
            "dev/authentication/configuration/FutureverseAuthClient",
            "dev/authentication/configuration/WagmiConfiguration",
            "dev/authentication/configuration/QueryClient"
          ]
        },
        {
          "group": "Providers",
          "pages": [
            "dev/authentication/providers",
            "dev/authentication/providers/query-client-provider",
            "dev/authentication/providers/futureverse-wagmi-provider",
            "dev/authentication/providers/futureverse-auth-provider",
            "dev/authentication/providers/auth-ui-provider",
            "dev/authentication/providers/auth-theme-provider"
          ]
        },
        "dev/authentication/theme-config",
        {
          "group": "Hooks",
          "pages": [
            "dev/authentication/hooks",
            "dev/authentication/hooks/useAuthUi",
            "dev/authentication/hooks/useAuth",
            "dev/authentication/hooks/useConnector",
            "dev/authentication/hooks/useFutureverseSigner"
          ]
        },
        "dev/authentication/localisation"
      ]
    },
    {
      "group": "Transactions",
      "pages": [
        "dev/transactions"            
      ]
    },
    {
      "group": "Platform Tools",
      "pages": [
        "platform-tools/platform-tools",
        "platform-tools/futurepass",
        "platform-tools/dot-2.0",
        "platform-tools/swappables-engine",
        "platform-tools/altered-state-api"
      ]
    },
    {
      "group": "API Documentation",
      "pages": [
        "api/introduction"
      ]
    },
    {
      "group": "Endpoint Examples",
      "pages": [
        "api/endpoint/get",
        "api/endpoint/create",
        "api/endpoint/delete"
      ]
    }
